<h1 class="text-center mb-4">All Movies in this list</h1>

<div class="text-center mb-4">
  <%= link_to "Add a movie", new_list_bookmark_path(@list), class: "btn btn-primary" %>
</div>

<div class="container">
  <div class="row">
    <% @list.bookmarks.each do |bookmark| %>
      <% movie = bookmark.movie %>
      <div class="col-md-4 mb-4">
        <div class="card h-100">
          <%= image_tag movie.poster_url, class: "card-img-top", style: "height: 300px; object-fit: cover;" %>
          <div class="card-body d-flex flex-column">
            <h5 class="card-title"><%= movie.title %></h5>
            <p class="card-text"><%= movie.overview %></p>
            <p class="card-text mt-auto"><small class="text-muted">Rating: <%= movie.rating %></small></p>
            <%= link_to "Remove", list_bookmark_path(@list, bookmark),
              data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },
              class: "btn btn-sm mt-2" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div class="mt-4">
  <%= link_to "Back to lists", lists_path, class: "btn btn-secondary" %>
  <%= link_to "Delete List", list_path(@list),
    data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },
    class: "btn" %>
</div>
